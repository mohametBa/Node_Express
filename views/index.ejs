<header>Blog de messages</header>

<% messages.forEach(function(message) { %>
  <div class="message">
    <h2><%= message.title %></h2>
    <p><%= message.body %></p>
    <span>Posted by: <%= message.name %></span>
    <span>Date: <%= message.timestamp %></span>
  </div>
<% }); %>

<!-- Formulaire pour ajouter un message -->
<div class="mb-3">
  <label class="form-label" for="name">Titre</label>
  <input class="form-control" id="name" type="text" placeholder="Titre de votre message" />
</div>

  <div class="mb-3">
    <label class="form-label" for="message">Message</label>
    <textarea class="form-control" id="message" type="text" placeholder="Tapez votre message" style="height: 10rem;"></textarea>
  </div>  
  <div class="mb-3">
    <label class="form-label" for="name">Votre nom</label>
    <input class="form-control" id="name" type="text" placeholder="Name" />
  </div>
